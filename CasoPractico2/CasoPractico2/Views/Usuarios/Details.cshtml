@model CasoPractico2.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Detalles de Usuario";
}

<h1>Detalles de Usuario</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre de Usuario</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.UserName)</dd>

        <dt class="col-sm-2">Nombre Completo</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NombreCompleto)</dd>

        <dt class="col-sm-2">Correo Electrónico</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PhoneNumber)</dd>

        <dt class="col-sm-2">Rol</dt>
        <dd class="col-sm-10">@string.Join(", ", Model.Roles)</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Regresar a la lista</a>
</div>